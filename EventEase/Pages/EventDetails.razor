@page "/eventdetails/{id:int}"
@inject EventEase.Services.EventService EventService

<h3>Event Details</h3>

@if (eventDetails != null)
{
    <div>
        <h4>@eventDetails.Name</h4>
        <p>Date: @eventDetails.Date.ToShortDateString()</p>
        <p>Location: @eventDetails.Location</p>
        <p>Description: @eventDetails.Description</p>
    </div>
}
else
{
    <p>Loading...</p>
}

@code {
    [Parameter]
    public int id { get; set; }

    public required EventEase.Models.Event eventDetails { get; set; } = new EventEase.Models.Event
    {
        Name = string.Empty,
        Location = string.Empty,
        Description = string.Empty
    };

    protected override void OnInitialized()
    {
        eventDetails = EventService.GetEventById(id) ?? new EventEase.Models.Event
        {
            Name = string.Empty,
            Location = string.Empty,
            Description = string.Empty
        };
    }
}
