@using EventEase.Pages.Models
@using Microsoft.AspNetCore.Components

<div class="event-card">
    @if(Event != null)
    {
        <h2>@Event.Name</h2>
        <p>@Event.Date?.ToShortDateString()</p>
        <p>@Event.Time?.ToString(@"hh\:mm")</p>
        <p>@Event.Description</p>
    }
</div>

@code {
    [Parameter]
    public Event? Event { get; set; }
}